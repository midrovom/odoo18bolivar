<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">

  <!-- Extender el template s_card_style_8 -->
  <t t-inherit="s_card_style_8" t-inherit-mode="extension">

    <!-- Ejemplo: insertar un botón "Ver más" debajo del nombre del producto -->
    <xpath expr="//h6[@class='card-title mb-1 fw-light text-truncate d-product-name']" position="after">
      <div class="mt-2">
        <a t-att-href="item.website_url"
           class="btn btn-outline-primary btn-sm rounded-pill">
          Ver más
        </a>
      </div>
    </xpath>

  </t>

</templates>

