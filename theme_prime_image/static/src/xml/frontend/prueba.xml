<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">

    <!-- Herencia del template de theme_prime -->
    <t t-name="theme_prime_custom.s_tp_hierarchical_category_style_1_inherit"
       t-inherit="s_tp_hierarchical_category_style_1"
       t-inherit-mode="primary">

        <!-- Localizamos el div que se repite en el foreach -->
        <xpath expr="//div[contains(@class,'s_tp_hierarchical_category_style_1')]" position="attributes">
            <!-- Quitamos las clases de grid col-6/col-lg-3 y aÃ±adimos flex -->
            <attribute name="class" replace="s_tp_hierarchical_category_style_1 d-flex flex-row align-items-start gap-3"/>
        </xpath>

    </t>

</templates>



