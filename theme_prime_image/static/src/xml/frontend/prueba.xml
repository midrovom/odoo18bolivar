<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">

    <t t-name="s_tp_hierarchical_category_style_1_inherit"
       t-inherit="theme_pime.s_tp_hierarchical_category_style_1"
       t-inherit-mode="primary">

        <!-- Antes del foreach abrimos un contenedor flex -->
        <xpath expr="//div[@t-foreach]" position="before">
            <div class="d-flex flex-row flex-wrap gap-3">
        </xpath>

        <!-- DespuÃ©s del foreach cerramos el contenedor -->
        <xpath expr="//div[@t-foreach]" position="after">
            </div>
        </xpath>

        <!-- Quitamos las clases de grid a cada item -->
        <xpath expr="//div[contains(@class,'s_tp_hierarchical_category_style_1')]" position="attributes">
            <attribute name="class" replace="s_tp_hierarchical_category_style_1 card p-2"/>
        </xpath>

    </t>

</templates>




