<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_cover_custom_slider" inherit_id="theme_prime.s_cover_2" name="Cover - Custom Slider Web/Mobile Full Width">
    
    <!-- Hacemos que el section sea full width -->
    <xpath expr="//section[contains(@class,'s_cover_2')]" position="attributes">
      <attribute name="class">s_cover_2 container-fluid</attribute>
    </xpath>

    <!-- Entramos al div.carousel-inner y reemplazamos solo los hijos (slides) -->
    <xpath expr="//div[contains(@class,'carousel-inner')]" position="inside">
      <xpath expr="./*" position="replace">

        <!-- Slide #01 -->
        <div class="carousel-item active" data-name="Slide">
          <img src="/theme_prime_image/static/src/img/s_banner_custom/banner.png"
               class="img-web"
               alt="Banner Web"/>
          <img src="/theme_prime_image/static/src/img/s_banner_custom/banner_mobile.png"
               class="img-mobile"
               alt="Banner MÃ³vil"/>
        </div>

        <!-- Slide #02 -->
        <div class="carousel-item" data-name="Slide">
          <img src="/theme_prime_image/static/src/img/s_banner_custom/banner2.png"
               class="img-web"
               alt="Banner Web 2"/>
          <img src="/theme_prime_image/static/src/img/s_banner_custom/banner2_mobile.png"
               class="img-mobile"
               alt="Banner MÃ³vil 2"/>
        </div>

      </xpath>
    </xpath>
  </template>
</odoo>
