<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_cover_custom_slider" inherit_id="theme_prime.s_cover_2" name="Cover - Custom Slider Web/Mobile">
    <!-- Ajustamos atributos al contenedor padre del carousel -->
    <xpath expr="//div[contains(@class,'carousel-inner')]/.." position="attributes">
      <attribute name="data-bs-ride">carousel</attribute>
      <attribute name="data-bs-interval">5000</attribute>
    </xpath>

    <!-- En vez de reemplazar el div, reemplazamos su contenido -->
    <xpath expr="//div[contains(@class,'carousel-inner')]" position="inside">
      <div class="carousel-item active w-100" data-name="Slide">
        <img src="/theme_prime_image/static/src/img/s_banner_custom/banner.png"
             class="d-none d-md-block w-100" alt="Banner Web"/>
        <img src="/theme_prime_image/static/src/img/s_banner_custom/banner_mobile.png"
             class="d-block d-md-none w-100" alt="Banner M贸vil"/>
      </div>
      <div class="carousel-item w-100" data-name="Slide">
        <img src="/theme_prime_image/static/src/img/s_banner_custom/banner.png"
             class="d-none d-md-block w-100" alt="Banner Web 2"/>
        <img src="/theme_prime_image/static/src/img/s_banner_custom/banner_mobile.png"
             class="d-block d-md-none w-100" alt="Banner M贸vil 2"/>
      </div>
    </xpath>
  </template>
</odoo>


