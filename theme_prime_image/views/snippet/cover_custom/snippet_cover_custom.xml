<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Registro del snippet -->
  <template id="s_cover_custom_snippet" inherit_id="theme_prime.snippets" name="Cover Registry">
    <xpath expr="//t[@t-snippet='theme_prime.s_cover_5']" position="after">
      <t t-snippet="theme_prime_image.s_cover_custom_slider" string="Cover Custom" group="theme_prime_cover">
        <keywords>covers, carousel</keywords>
      </t>
    </xpath>
  </template>

  <!-- Snippet nuevo -->
  <template id="s_cover_custom_slider" name="Cover - Custom Slider Web/Mobile">
    <section class="s_cover_custom_slider">
      <div id="myCarouselCustom" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
        <div class="carousel-inner">
          <!-- Slide #1 -->
          <div class="carousel-item active w-100" data-name="Slide">
            <img src="/theme_prime_image/static/src/img/s_banner_custom/banner.png"
                 class="img-web w-100" alt="Banner Web"/>
            <img src="/theme_prime_image/static/src/img/s_banner_custom/banner_mobile.png"
                 class="img-mobile w-100" alt="Banner M贸vil"/>
          </div>
          <!-- Slide #2 -->
          <div class="carousel-item w-100" data-name="Slide">
            <img src="/theme_prime_image/static/src/img/s_banner_custom/banner.png"
                 class="img-web w-100" alt="Banner Web 2"/>
            <img src="/theme_prime_image/static/src/img/s_banner_custom/banner_mobile.png"
                 class="img-mobile w-100" alt="Banner M贸vil 2"/>
          </div>
        </div>

        <!-- Controles -->
        <button class="carousel-control-prev" type="button" data-bs-target="#myCarouselCustom" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"/>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#myCarouselCustom" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"/>
          <span class="visually-hidden">Next</span>
        </button>

        <!-- Indicadores -->
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#myCarouselCustom" data-bs-slide-to="0" class="active"/>
          <button type="button" data-bs-target="#myCarouselCustom" data-bs-slide-to="1"/>
        </div>
      </div>
    </section>
  </template>
</odoo>

