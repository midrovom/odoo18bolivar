<odoo>
  <template id="s_cover_custom_slider" inherit_id="theme_prime.s_cover_2" name="Cover - Custom Slider Web/Mobile">
    
    <!-- Reemplaza el contenedor padre del carrusel para eliminar padding -->
    <xpath expr="//div[contains(@class,'carousel-inner')]/.." position="replace">
      <div class="container-fluid px-0" data-bs-ride="carousel" data-bs-interval="5000">
        <div class="s_cover_custom carousel-inner" data-oe-slideshow="true">
          
          <!-- Slide 1 -->
          <div class="carousel-item active" data-name="Slide">
            <picture>
              <source media="(max-width: 767px)" srcset="/theme_prime_image/static/src/img/s_banner_custom/banner_mobile.png"/>
              <img src="/theme_prime_image/static/src/img/s_banner_custom/banner.png" class="d-block w-100 m-0 p-0" alt="Banner Web"/>
            </picture>
          </div>

          <!-- Slide 2 -->
          <div class="carousel-item" data-name="Slide">
            <picture>
              <source media="(max-width: 767px)" srcset="/theme_prime_image/static/src/img/s_banner_custom/banner_mobile.png"/>
              <img src="/theme_prime_image/static/src/img/s_banner_custom/banner.png" class="d-block w-100 m-0 p-0" alt="Banner Web 2"/>
            </picture>
          </div>

        </div>
      </div>
    </xpath>

  </template>
</odoo>



