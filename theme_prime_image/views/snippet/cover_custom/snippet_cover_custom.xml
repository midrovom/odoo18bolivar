<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_cover_custom_snippet" inherit_id="theme_prime.snippets" name="Cover Registry">
    <xpath expr="//t[@t-snippet='theme_prime.s_cover_5']" position="after">
      <t t-snippet="theme_prime_image.s_cover_custom_slider" string="Cover Custom" group="theme_prime_cover">
        <keywords>covers, carousel</keywords>
      </t>
    </xpath>
  </template>

  <template id="s_cover_custom_slider" inherit_id="theme_prime.s_cover_2" name="Cover - Custom Slider Web/Mobile">
    <xpath expr="//div[contains(@class,'carousel-inner')]/.." position="attributes">
      <attribute name="data-bs-ride">carousel</attribute>
      <attribute name="data-bs-interval">5000</attribute>
    </xpath>

    <xpath expr="//div[contains(@class,'carousel-inner')]" position="replace">
      <div class="carousel-item active w-100" data-name="Slide">
        <img src="/theme_prime_image/static/src/img/s_banner_custom/banner.png"
             class="d-none d-md-block w-100" alt="Banner Web"/>
        <img src="/theme_prime_image/static/src/img/s_banner_custom/banner_mobile.png"
             class="d-block d-md-none w-100" alt="Banner Móvil"/>
      </div>
      <div class="carousel-item w-100" data-name="Slide">
        <img src="/theme_prime_image/static/src/img/s_banner_custom/banner.png"
             class="d-none d-md-block w-100" alt="Banner Web 2"/>
        <img src="/theme_prime_image/static/src/img/s_banner_custom/banner_mobile.png"
             class="d-block d-md-none w-100" alt="Banner Móvil 2"/>
      </div>
    </xpath>

    <xpath expr="//div[contains(@class,'carousel')]" position="inside">
      <button class="carousel-control-prev" type="button"
              t-attf-data-bs-target="#myCarousel{{uniq}}" data-bs-slide="prev" aria-label="Previous" title="Previous">
        <span class="carousel-control-prev-icon" aria-hidden="true"/>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button"
              t-attf-data-bs-target="#myCarousel{{uniq}}" data-bs-slide="next" aria-label="Next" title="Next">
        <span class="carousel-control-next-icon" aria-hidden="true"/>
        <span class="visually-hidden">Next</span>
      </button>

      <div class="carousel-indicators">
        <button type="button" t-attf-data-bs-target="#myCarousel{{uniq}}" data-bs-slide-to="0" class="active"/>
        <button type="button" t-attf-data-bs-target="#myCarousel{{uniq}}" data-bs-slide-to="1"/>
      </div>
    </xpath>
  </template>

  <!-- Estilos directos -->
  <style>
    /* Centrar controles verticalmente */
    .s_cover_custom_slider .carousel-control-prev,
    .s_cover_custom_slider .carousel-control-next {
      top: 50%;
      transform: translateY(-50%);
    }

    /* Evitar scroll horizontal durante transición */
    .s_cover_custom_slider .carousel-inner {
      overflow: hidden;
    }

    /* Ajustar indicadores abajo */
    .s_cover_custom_slider .carousel-indicators {
      bottom: 10px;
    }
  </style>
</odoo>



