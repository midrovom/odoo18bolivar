<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_cover_custom" inherit_id="theme_prime.s_cover_2" name="Cover - Custom Web/Mobile">
    <xpath expr="//div[@class='carousel-inner']" position="replace">
      <div class="s_cover_custom">

        <!-- Imagen para escritorio -->
        <img src="/theme_prime_image/static/src/img/s_banner_custom/banner_web.png"
             class="img-web"
             alt="Banner Web"/>

        <!-- Imagen para móvil -->
        <img src="/theme_prime_image/static/src/img/s_banner_custom/banner_mobile.png"
             class="img-mobile"
             alt="Banner Móvil"/>

      </div>
    </xpath>

    <xpath expr="//section[contains(@class,'s_cover')]" position="inside">
      <style>
        /* Imagen de escritorio */
        .s_cover_custom .img-web {
          display: block;
          width: 100%;
          height: 300px;       /* altura fija para web */
          object-fit: cover;
        }

        /* Imagen de móvil oculta por defecto */
        .s_cover_custom .img-mobile {
          display: none;
        }

        /* En pantallas pequeñas */
        @media (max-width: 767px) {
          .s_cover_custom .img-web {
            display: none;
          }
          .s_cover_custom .img-mobile {
            display: block;
            width: 100%;
            height: auto;       /* que se adapte a su proporción */
            max-width: 100%;
            object-fit: contain; /* mostrar completa sin recortar */
          }
        }
      </style>
    </xpath>
  </template>
</odoo>
