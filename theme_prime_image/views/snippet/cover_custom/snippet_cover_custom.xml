<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_cover_6_snippet" inherit_id="theme_prime.snippets" name="Cover - 6 Registry">
    <xpath expr="//t[@t-snippet='theme_prime.s_cover_5']" position="after">
      <t t-snippet="theme_prime_image.s_cover_6"
         string="Cover - 6"
         group="theme_prime_cover"
         t-thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png"
         data-snippet-option-class="CoverOptions">
        <keywords>cover, hero, slider</keywords>
      </t>
    </xpath>
  </template>

  <template id="s_cover_6" name="Cover - 6">
    <section class="s_cover o_colored_level pt120 pb120"
             data-snippet="s_cover"
             data-name="Cover - 6">

      <div class="container text-center">
        <div class="o_bg_img o_bg_img_center"
             data-snippet-option-id="background">
          <img src="/theme_prime_image/static/src/img/s_banner_custom/banner1.jpg"
               class="img-fluid"
               alt="Cover 6"/>
        </div>


        <h1 class="s_title mt32">Tu título aquí</h1>
        <p class="lead">Un subtítulo o descripción breve</p>
        <a href="#" class="btn btn-primary mt16">Llamada a la acción</a>
      </div>
    </section>
  </template>
</odoo>
