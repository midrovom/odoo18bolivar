<odoo>
  <template id="template_footer_mobile" name="Footer Mobile">
    <div id="footer" class="oe_structure oe_structure_solo d-block d-lg-none" t-if="not no_footer">
      <section class="s_text_block pt32 pb32" data-snippet="s_text_block" data-name="Mobile Footer">
        <div class="container">
          <div class="text-center mb-4">
            <a href="/" class="o_footer_logo logo">
              <img src="/website/static/src/img/website_logo.svg" class="img-fluid" alt="Logo of MyCompany"/>
            </a>
          </div>

          <div class="accordion" id="footerAccordion">

            <!-- Products -->
            <div class="accordion-item mb-2">
              <h2 class="accordion-header" id="headingProducts">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseProducts" aria-expanded="false" aria-controls="collapseProducts">
                  Products
                </button>
              </h2>
              <div id="collapseProducts" class="accordion-collapse collapse" aria-labelledby="headingProducts" data-bs-parent="#footerAccordion">
                <div class="accordion-body">
                  <ul class="list-unstyled">
                    <li><a href="#">Smartphone</a></li>
                    <li><a href="#">Laptop</a></li>
                    <li><a href="#">Mouse</a></li>
                    <li><a href="#">Monitor</a></li>
                    <li><a href="#">Watch</a></li>
                    <li><a href="#">Tablet</a></li>
                    <li><a href="#">Accessorie</a></li>
                    <li><a href="#">Mouses Pad</a></li>
                    <li><a href="#">Handset</a></li>
                    <li><a href="#">Phablet</a></li>
                    <li><a href="#">Speakers</a></li>
                    <li><a href="#">Camera</a></li>
                    <li><a href="#">Play Station</a></li>
                    <li><a href="#">Xbox</a></li>
                  </ul>
                </div>
              </div>
            </div>

            <!-- Servicio al cliente -->
            <div class="accordion-item mb-2">
              <h2 class="accordion-header" id="headingService">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseService" aria-expanded="false" aria-controls="collapseService">
                  Servicio al cliente
                </button>
              </h2>
              <div id="collapseService" class="accordion-collapse collapse" aria-labelledby="headingService" data-bs-parent="#footerAccordion">
                <div class="accordion-body">
                  <ul class="list-unstyled">
                    <li><a href="#">Preguntas frecuentes</a></li>
                    <li><a href="#">Cambios y devoluciones</a></li>
                    <li><a href="#">Términos y condiciones</a></li>
                    <li><a href="#">Facturación Electrónica</a></li>
                    <li><a href="#">Huawei</a></li>
                    <li><a href="#">Motorola</a></li>
                    <li><a href="#">Sony</a></li>
                    <li><a href="#">Nokia</a></li>
                  </ul>
                </div>
              </div>
            </div>

            <!-- Contacto -->
            <div class="accordion-item mb-2">
              <h2 class="accordion-header" id="headingContact">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseContact" aria-expanded="false" aria-controls="collapseContact">
                  Contact Us
                </button>
              </h2>
              <div id="collapseContact" class="accordion-collapse collapse" aria-labelledby="headingContact" data-bs-parent="#footerAccordion">
                <div class="accordion-body">
                  <ul class="list-unstyled">
                    <li><i class="fa fa-phone me-1"/><a href="tel:+1 555-555-5556">+1 555-555-5556</a></li>
                    <li><i class="fa fa-envelope me-1"/><a href="mailto:info@yourcompany.com">info@yourcompany.com</a></li>
                  </ul>
                </div>
              </div>
            </div>

            <!-- Redes sociales -->
            <div class="accordion-item mb-2">
              <h2 class="accordion-header" id="headingSocial">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSocial" aria-expanded="false" aria-controls="collapseSocial">
                  Follow Us On
                </button>
              </h2>
              <div id="collapseSocial" class="accordion-collapse collapse" aria-labelledby="headingSocial" data-bs-parent="#footerAccordion">
                <div class="accordion-body d-flex gap-3">
                  <a href="/website/social/tiktok" aria-label="TikTok"><i class="fa fa-tiktok"/></a>
                  <a href="/website/social/instagram" aria-label="Instagram"><i class="fa fa-instagram"/></a>
                  <a href="/website/social/facebook" aria-label="Facebook"><i class="fa fa-facebook"/></a>
                </div>
              </div>
            </div>

          </div>

          <!-- Copyright -->
          <div class="text-center mt-4">
            <small>© MyCompany</small>
          </div>
        </div>
      </section>
    </div>
  </template>
</odoo>
