<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="template_footer_logo_left" inherit_id="theme_prime.template_footer_style_1" name="Footer Logo Left">
    <xpath expr="//div[@id='footer']" position="replace">
      <div id="footer" class="oe_structure oe_structure_solo" t-ignore="true" t-if="not no_footer">
        <section class="s_text_block pt64 pb32" data-snippet="s_text_block" data-name="Text">
          <div class="container">
            <div class="row">
              <div class="col-12 text-start mb-5">
                <a href="/" class="o_footer_logo logo">
                  <img src="/website/static/src/img/website_logo.svg" class="img-fluid" aria-label="Logo of MyCompany" title="MyCompany" role="img"/>
                </a>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-6 col-xl-5 mb-4">
                <h5>Products</h5>
                <div class="row">
                  <div class="col-4">
                    <ul class="list-unstyled">
                      <li class="my-2"><a href="#">Smartphone</a></li>
                      <li class="my-2"><a href="#">Laptop</a></li>
                      <li class="my-2"><a href="#">Mouse</a></li>
                      <li class="my-2"><a href="#">Monitor</a></li>
                      <li class="my-2"><a href="#">Watch</a></li>
                    </ul>
                  </div>
                  <div class="col-4">
                    <ul class="list-unstyled">
                      <li class="my-2"><a href="#">Tablet</a></li>
                      <li class="my-2"><a href="#">Accessorie</a></li>
                      <li class="my-2"><a href="#">Mouses Pad</a></li>
                      <li class="my-2"><a href="#">Handset</a></li>
                      <li class="my-2"><a href="#">Phablet</a></li>
                    </ul>
                  </div>
                  <div class="col-4">
                    <ul class="list-unstyled">
                      <li class="my-2"><a href="#">Speakers</a></li>
                      <li class="my-2"><a href="#">Camera</a></li>
                      <li class="my-2"><a href="#">Play Station</a></li>
                      <li class="my-2"><a href="#">Xbox</a></li>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="col-lg-6 col-xl-3 mb-4">
                <h5>Servicio al Cliente</h5>
                <ul class="list-unstyled">
                  <li class="my-2"><a href="#">Preguntas frecuentes</a></li>
                  <li class="my-2"><a href="#">Cambios y Devoluciones</a></li>
                  <li class="my-2"><a href="#">Términos y Condiciones</a></li>
                  <li class="my-2"><a href="#">Facturación Electrónica</a></li>
                </ul>
              </div>
              <div class="col-lg-6 col-xl-4 mb-4">
                <h5>Contact Us</h5>
                <ul class="list-unstyled">
                  <li class="py-1">
                    <i class="fa fa-1x fa-fw fa-phone me-1"/>
                    <span class="o_force_ltr">
                      <a href="tel:+1 555-555-5556">+1 555-555-5556</a>
                    </span>
                  </li>
                  <li class="py-1">
                    <i class="fa fa-1x fa-fw fa-envelope me-1"/>
                    <a href="mailto:info@yourcompany.com">info@yourcompany.com</a>
                  </li>
                </ul>
                <div class="mt-3">
                  <h5>Follow Us On</h5>
                  <div class="s_social_media o_not_editable no_icon_color tp-followus-icons d-flex gap-3"
                      data-snippet="s_social_media" data-name="Social Media" contenteditable="false">
                    <h5 class="s_social_media_title d-none" contenteditable="true">Follow Us On</h5>
                    <a href="/website/social/tiktok" class="s_social_media_tiktok" target="_blank" aria-label="TikTok">
                      <i class="fa fa-tiktok o_editable_media"/>
                    </a>
                    <a href="/website/social/instagram" class="s_social_media_instagram" target="_blank" aria-label="Instagram">
                      <i class="fa fa-instagram o_editable_media"/>
                    </a>
                    <a href="/website/social/facebook" class="s_social_media_facebook" target="_blank" aria-label="Facebook">
                      <i class="fa fa-facebook o_editable_media"/>
                    </a>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </section>
      </div>
    </xpath>
  </template>
</odoo>






