<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="template_footer_logo_left" inherit_id="theme_prime.template_footer_style_1" name="Footer Logo Left">
  <xpath expr="//div[@id='footer']" position="replace">
      <div id="footer" class="oe_structure oe_structure_solo" t-ignore="true" t-if="not no_footer">
          <section class="s_text_block pt64 pb32">
              <div class="container">
                  <div class="row">
                      <!-- Logo -->
                      <div class="col-12 text-start mb-5">
                          <a href="/" class="o_footer_logo logo">
                              <img src="/website/static/src/img/website_logo.svg" class="img-fluid"/>
                          </a>
                      </div>
                  </div>
                  <div class="row">
                      <!-- Contacto -->
                      <div class="col-lg-6 col-xl-4 mb-4">
                          <h5>Contact Us</h5>
                          <ul class="list-unstyled">
                              <li class="py-1">
                                  <i class="fa fa-phone me-1"/>
                                  <a href="tel:+1 555-555-5556">+1 555-555-5556</a>
                              </li>
                              <li class="py-1">
                                  <i class="fa fa-envelope me-1"/>
                                  <a href="mailto:info@yourcompany.com">info@yourcompany.com</a>
                              </li>
                          </ul>
                          <!-- Redes sociales -->
                          <div class="d-flex gap-3 mt-3">
                              <a href="/website/social/tiktok" target="_blank"><i class="fa fa-tiktok"/></a>
                              <a href="/website/social/instagram" target="_blank"><i class="fa fa-instagram"/></a>
                              <a href="/website/social/facebook" target="_blank"><i class="fa fa-facebook"/></a>
                          </div>
                      </div>
                      <!-- AquÃ­ puedes volver a poner Products, Brands, etc. si quieres -->
                  </div>
              </div>
          </section>
      </div>
  </xpath>
</template>
</odoo>





