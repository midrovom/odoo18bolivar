<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_subscribe_2_inherit" inherit_id="theme_prime.s_subscribe_2" name="Subscribe 2 - Centrado">
    <xpath expr="//div[@class='row s_col_no_bgcolor s_nb_column_fixed']" position="replace">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 text-center">
          <h3 class="mb-4">Subscribe to our weekly newsletter</h3>
          
          <!-- Formulario centrado -->
          <div class="s_newsletter_list js_subscribe" data-vxml="001" data-list-id="0" data-name="Newsletter Form">
            <div class="d-flex justify-content-center w-100" style="max-width:600px; margin:0 auto;">
              <input type="email" name="email" class="js_subscribe_value form-control me-3 flex-grow-1"
                    placeholder="your email..."/>
              <a role="button" href="#" class="btn btn-primary js_subscribe_btn o_submit">Subscribe</a>
              <a role="button" href="#" class="btn btn-success js_subscribed_btn d-none o_submit" disabled="disabled">Thanks</a>
            </div>
          </div>
        </div>
      </div>
    </xpath>
  </template>
</odoo>
