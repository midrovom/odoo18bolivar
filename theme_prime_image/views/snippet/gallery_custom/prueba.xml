<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_gallery_snippet" inherit_id="theme_prime.snippets" name="Products Gallery - 6 Registry">
    <xpath expr="//t[@t-snippet='theme_prime.s_d_products_snippet']" position="after">
      <t t-snippet="theme_prime_image.snippet_dos_columnas"
         string="Products Gallery - 6"
         group="theme_prime_dynamic"
         t-thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png">
        <keywords>products, dynamic</keywords>
      </t>
    </xpath>
  </template>

  <template id="snippet_dos_columnas" name="Snippet 2 Columnas con Cards">
    <section class="s_dos_columnas o_snippet_body">
      <div class="container">
        <div class="row">
          <!-- Columna 1 -->
          <div class="col-lg-6 col-md-6 col-sm-12">
            <t t-foreach="range(5)" t-as="i">
              <div class="card mb-3">
                <div class="card-body">
                  <h5 class="card-title">Card <t t-esc="i+1"/></h5>
                  <p class="card-text">
                    <t t-esc="category_data[i] if category_data and i &lt; len(category_data) else 'Contenido dinámico'"/>
                  </p>
                </div>
              </div>
            </t>
          </div>
          <!-- Columna 2 -->
          <div class="col-lg-6 col-md-6 col-sm-12">
            <t t-foreach="range(5,10)" t-as="i">
              <div class="card mb-3">
                <div class="card-body">
                  <h5 class="card-title">Card <t t-esc="i+1"/></h5>
                  <p class="card-text">
                    <t t-esc="category_data[i] if category_data and i &lt; len(category_data) else 'Contenido dinámico'"/>
                  </p>
                </div>
              </div>
            </t>
          </div>
        </div>
      </div>
    </section>
  </template>

  <!-- Definición del snippet en el editor -->
  <record id="snippet_dos_columnas_record" model="website.snippet">
    <field name="name">2 Columnas con Cards</field>
    <field name="template_id" ref="snippet_dos_columnas"/>
    <field name="category">Contenido</field>
  </record>
</odoo>
