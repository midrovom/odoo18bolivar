<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_cover_banner_snippet" inherit_id="theme_prime.snippets" name="Cover Banner - Promo">
    <xpath expr="//t[@t-snippet='theme_prime.s_d_products_snippet']" position="after">
      <t t-snippet="theme_prime_image.s_tp_hierarchical_category_snippet_custom"
         string="Cover Banner - Promo"
         group="theme_prime_dynamic"
         t-thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png">
        <keywords>cover, banner, promo</keywords>
      </t>
    </xpath>
  </template>

      <template id="s_tp_hierarchical_category_snippet_custom" name="Categories">
        <section contenteditable="false" class="s_tp_hierarchical_category_wrapper_12 tp-droggol-18-builder-snippet pt32 pb32" data-tp-snippet-id="s_tp_hierarchical_category_snippet">
            <div class="container s_tp_hierarchical_category_wrapper"/>
        </section>
    </template>