<odoo>
  <template id="add_custom_mega_menu_button" inherit_id="droggol_theme_common.snippets" name="Add custom mega menu button">
    <xpath expr="//div[@data-js='MegaMenuLayout']/we-select/we-button[last()]" position="after">
      
      <t t-set="_label">My Custom Slider</t>
      <we-button
        t-att-data-select-label="_label"
        data-select-template="my_module.s_my_custom_mega_menu_slider"
        data-img="/my_module/static/src/img/options/my_custom_slider.svg"
        t-out="_label"
      />

    </xpath>
  </template>
</odoo>


