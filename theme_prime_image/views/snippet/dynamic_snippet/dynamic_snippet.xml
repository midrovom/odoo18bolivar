<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_banner_dynamic_custom" inherit_id="theme_prime.snippets" name="Cover Banner - Promo">
    <xpath expr="//t[@t-snippet='theme_prime.s_category_brands']" position="after">
      <t t-snippet="theme_prime_image.s_d_single_product_snippet_custom"
         string="s_banner_dynamic_custom"
         group="theme_prime_dynamic"
         t-thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png">
        <keywords>cover, banner, promo</keywords>
      </t>
    </xpath>
  </template>

  <template id="s_d_single_product_snippet_custom" name="Full Products">
    <section contenteditable="false" class="s_d_single_product_snippet_wrapper tp-droggol-18-builder-snippet pt32 pb32" data-tp-snippet-id="s_d_single_product_snippet">
            <div class="d_single_product_continer container dr_not_editable o_not_editable mb-4"/>
     </section>
    </template>
</odoo>