<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_clients_brand_snippet" inherit_id="theme_prime.snippets" name="Clients Brand Registry">
    <xpath expr="//t[@t-snippet='theme_prime.s_clients_4']" position="after">
      <t t-snippet="theme_prime_image.s_category_slider"
         string="Clients - 5 (Marcas destacadas)"
         group="theme_prime_clients"
         t-thumbnail="/theme_prime_image/static/src/img/snippets/brands_thumb.png">
        <keywords>clients, brands, logo, reference</keywords>
      </t>
    </xpath>
  </template>

<template id="s_category_slider" name="Category Slider Snippet">
    <section class="s_category_slider pt32 pb32" data-snippet="s_category_slider" data-name="Category Slider">
        <div id="categoryCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <t t-foreach="categories" t-as="cat" t-esc-options="{'groups_of': 4}">
                    <div t-attf-class="carousel-item #{'active' if loop.first else ''}">
                        <div class="d-flex justify-content-center gap-3">
                            <t t-foreach="cat" t-as="c">
                                <div class="card shadow-sm" style="width: 12rem;">
                                    <img t-att-src="c.image_1920 and '/web/image/product.public.category/' + str(c.id) + '/image_1920' or '/web/static/img/placeholder.png'" 
                                         class="card-img-top" alt="Category Image"/>
                                    <div class="card-body text-center">
                                        <h6 class="card-title" t-esc="c.name"/>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </t>
            </div>
            <!-- Controles -->
            <button class="carousel-control-prev" type="button" data-bs-target="#categoryCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#categoryCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </section>
</template>


</odoo>

