<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="my_snippets" inherit_id="website.snippets">
    <t t-snippet="theme_prime.s_d_products_snippet" position="before">
        <t t-snippet="theme_prime_image.my_s_d_products_snippet"
           string="My Products"
           group="theme_prime_dynamic">
            <keywords>products, dynamic</keywords>
        </t>
    </t>
</template>


<!-- Mi copia del snippet de productos -->
<template id="my_s_d_products_snippet" name="My Products Cards">
    <section contenteditable="false"
             class="tp-droggol-18-builder-snippet dr_not_editable my_s_d_products_snippet_wrapper text-center"
             data-tp-snippet-id="my_s_d_products_snippet">
        <div class="my_s_d_products_snippet container o_not_editable"/>
        <div class="s_dialog_preview">
            <img src="/theme_prime_image/static/src/img/snippets_thumbs/my_products_preview.png"
                 class="img-fluid mx-auto"/>
        </div>
    </section>
</template>

</odoo>

