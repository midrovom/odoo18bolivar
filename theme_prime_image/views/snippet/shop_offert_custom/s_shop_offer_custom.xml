<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_shop_offer_1_inherit" inherit_id="theme_prime.s_shop_offer_1" name="Shop Offer 1 Custom">
    <xpath expr="//section[contains(@class,'s_shop_offer_1')]" position="attributes">
      <attribute name="class">s_shop_offer_1 w-100 mt-5 mb-5 bg-white</attribute>
      <attribute name="style">margin:0; padding:0;</attribute>
    </xpath>

    <xpath expr="//div[@class='col-12 text-center']" position="replace">
      <div class="col-12 col-md-11 col-lg-10 mx-auto text-center">
        <div class="shop-offer-wrapper">
          <div class="shop-offer-text">
            <h3 class="shop-offer-title text-uppercase mb-0">
              HASTA EL <span class="text-o-color-1">30%</span> OFF EN TU PRIMERA COMPRA
            </h3>
            <p class="shop-offer-note mb-1">*Aplican t√©rminos y condiciones</p>
          </div>
          <div class="shop-offer-actions">
            <a href="#" class="btn btn-primary rounded-pill">Ver Ofertas</a>
          </div>
        </div>
      </div>
    </xpath>
  </template>
</odoo>
