<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_shop_offer_1_inherit" inherit_id="theme_prime.s_shop_offer_1" name="Shop Offer 1 Custom">
    <xpath expr="//div[@class='col-12 text-center']" position="replace">
      <div class="col-12 text-center custom-offer">
        <h3 class="offer-title text-uppercase">
          HASTA EL <span class="text-o-color-1">30%</span> OFF EN TU PRIMERA COMPRA
        </h3>
        <p class="offer-terms">
          *Aplican t√©rminos y condiciones
        </p>
        <a href="#" class="btn btn-primary rounded-pill mt-2">
          Ver Ofertas
        </a>
      </div>
    </xpath>

    <!-- Reducimos el alto del bloque -->
    <xpath expr="//section[contains(@class,'s_shop_offer_1')]" position="attributes">
      <attribute name="class">s_shop_offer_1 parallax s_parallax_is_fixed pt40 pb40 s_parallax_no_overflow_hidden</attribute>
    </xpath>

    <!-- Estilos personalizados -->
    <xpath expr="//template[@id='s_shop_offer_1_inherit']" position="inside">
      <style>
        .custom-offer {
          max-width: 800px;   /* ancho limitado */
          margin: 0 auto;     /* centrado */
        }
        .custom-offer .offer-title {
          margin-bottom: 0.5rem;
        }
        .custom-offer .offer-terms {
          font-size: 12px;
          margin-bottom: 1rem;
        }
        .custom-offer .btn {
          padding: 0.5rem 1.5rem;
        }
      </style>
    </xpath>
  </template>
</odoo>
