<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_trending_box_with_image_snippet_snippet" inherit_id="theme_prime.snippets" name="Trending Box with Image - Registry">
    <xpath expr="//t[@t-snippet='theme_prime.s_call_to_action_5']" position="after">
      <t t-snippet="theme_prime_image.s_trending_box_with_image_snippet"
         string="Trending Box with Image"
         group="theme_prime_cta"
         t-thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png">
        <keywords>trending, image, link</keywords>
      </t>
    </xpath>
  </template>

  <template id="s_trending_box_with_image_snippet" name="Trending Box with Image">
    <section class="s_trending_box_with_image o_snippet_editable py-3">
      <div class="container-fluid">
        <div class="row justify-content-center">
          <div class="col-12 col-md-11 col-lg-10">
            <div class="d-flex align-items-center justify-content-between gap-4 flex-wrap o_editable">
              
              <!-- Texto -->
              <div class="text-block d-flex align-items-center gap-2">
                <h3 class="mb-0">#Trending</h3>
                <p class="mb-0 text-muted">Esto podrÃ­a interesarte</p>
              </div>

              <!-- Imagen dentro de div rectangular -->
              <div class="image-box rounded shadow-sm overflow-hidden" style="width: 220px; height: 120px;">
                <img src="/theme_prime_image/static/src/img/s_banner_custom/banner1.jpg"
                     alt="Imagen destacada"
                     class="img-fluid h-100 w-100"
                     style="object-fit: cover;"/>
              </div>

              <!-- BotÃ³n tipo link -->
              <div class="link-box text-center">
                <a href="#" class="btn btn-link text-decoration-none">Ver ofertas</a>
              </div>

            </div>
          </div>
        </div>
      </div>
    </section>
  </template>
</odoo>
