<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_shop_offer_snippet" inherit_id="theme_prime.snippets" name="Shop Offer - 6 Registry">
    <xpath expr="//t[@t-snippet='theme_prime.s_shop_offer_5']" position="after">
      <t t-snippet="theme_prime_image.s_shop_offer_6"
         string="Shop Offer - 6"
         group="theme_prime_shop_offer"
         t-thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png">
        <keywords>offer</keywords>
      </t>
    </xpath>
  </template>

  <template id="s_shop_offer_6" name="Shop Offer - 6">
    <section class="s_shop_offer_6 o_container mt-5 mb-5 py-4 o_cc o_cc2 rounded shadow-sm"
             style="max-width:1000px; margin:40px auto;">
      <div class="container">
        <div class="d-flex flex-column flex-md-row align-items-center justify-content-between gap-3 flex-md-nowrap">
          <div class="flex-grow-1 text-center text-md-start">
            <h3 class="fw-bold mb-0">
              Difere tu compra hasta <span class="text-o-color-1">36 meses</span>
            </h3>
            <p class="mt-1 mb-0" style="font-size: 12px;">*Aplican términos y condiciones</p>
          </div>

          <!-- Imagen rectangular con bordes redondeados -->
          <div class="flex-shrink-0">
            <div class="rounded overflow-hidden" style="width: 220px; height: 120px;">
              <img src="/theme_prime_image/static/src/img/s_banner_custom/banner1.jpg"
                   alt="Oferta Especial"
                   class="img-fluid"
                   style="width:100%; height:100%; object-fit: cover;"/>
            </div>
          </div>

          <!-- Botón -->
          <div class="flex-shrink-0 text-center text-md-start">
            <a href="#" class="btn btn-primary">Ver Ofertas</a>
          </div>

        </div>
      </div>
    </section>
  </template>
</odoo>
