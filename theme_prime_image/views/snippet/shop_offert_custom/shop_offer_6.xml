<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_trending_box_with_image_snippet_snippet" inherit_id="theme_prime.snippets" name="Trending Box with Image - Registry">
    <xpath expr="//t[@t-snippet='theme_prime.s_shop_offer_5']" position="after">
      <t t-snippet="theme_prime_image.s_trending_box_with_image_snippet" string="Trending Box with Image" group="theme_prime_shop_offer">
       <keywords>trending, image, link</keywords>
      </t>
    </xpath>
  </template>

  <template id="s_trending_box_with_image_snippet" name="Trending Box with Image">
    <section class="s_trending_box_with_image o_snippet_editable">
      <div class="container-fluid">
        <div class="row justify-content-center">
          <div class="col-12 col-md-11 col-lg-10">
            <!-- Versión Web -->
            <div class="d-none d-md-flex flex-md-row align-items-center justify-content-between gap-5 o_editable">
              <div class="text-block d-flex flex-column align-items-start text-start">
                <div class="d-flex flex-row align-items-center gap-2">
                  <p class="mb-0 text-muted">Difiere tus compras hasta</p>
                  <h3 class="mb-0">36 MESES</h3>
                </div>
              <p class="mt-1 mb-0 text-muted" style="font-size: 0.75rem;">*Aplican términos y condiciones</p>
            </div>
          <div class="image-box o_editable">
        <img src="/theme_prime_image/static/src/img/s_banner_custom/banner1.jpg" alt="Imagen destacada" class="img-fluid"
        style="width: 320px; height: 140px; object-fit: cover; border-radius: 0.75rem;"/>
      </div>
    </div>
  <!-- Versión Móvil -->
  <div class="d-flex d-md-none flex-column align-items-center text-center gap-2 o_editable mt-3">
    <p class="mb-0 text-muted">Difiere tus compras hasta</p>
      <div class="d-flex flex-row align-items-center gap-2">
        <h3 class="mb-0">36 MESES</h3>
          <div class="image-box o_editable">
            <img src="/theme_prime_image/static/src/img/s_banner_custom/banner1_mobile.jpg" alt="Imagen móvil" class="img-fluid"
              style="width: 200px; height: 100px; object-fit: cover; border-radius: 0.75rem;"/>
              </div>
                </div>
              <p class="mb-0 text-muted" style="font-size: 0.75rem;">*Aplican términos y condiciones</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </template>
</odoo>
