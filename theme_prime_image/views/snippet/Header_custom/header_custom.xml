<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="template_header_style_4_inherit" inherit_id="theme_prime.template_header_style_4" name="Header Style - 4 Inherit">
    <xpath expr="//div[@class='tp-account-info']//div[contains(@class,'d-flex') and .//i[contains(@class,'dri-user')]]" position="replace">
        <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
                <a href="#" class="tp-account-info-sidebar-action">
                    <i class="dri dri-user tp-light-bg rounded-circle"/>
                </a>
            </div>
            <div class="flex-grow-1 ms-3 d-none d-xl-block">
                <div t-nocache="User may vary." style="max-width: 150px;" class="text-truncate mb-1">
                    <t t-out="not user_id._is_public() and user_id.name or 'Guest'"/>
                </div>
                <!-- Aquí añadimos el separador y los enlaces -->
                <div class="d-flex align-items-center">
                    <a class="tp-account-info-sidebar-action me-2" href="/web/login">Login</a>
                    <span class="mx-1">|</span>
                    <a class="tp-account-info-sidebar-action ms-2" href="/web/signup">Register</a>
                </div>
            </div>
        </div>
    </xpath>
</template>

</odoo>
