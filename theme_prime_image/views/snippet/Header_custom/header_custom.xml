<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="template_header_style_4_inherit_clean" inherit_id="theme_prime.template_header_style_4" name="Header Style - 4 Clean User Block">
    <xpath expr="//div[contains(@class,'tp-account-info')]//div[contains(@class,'col-auto')][.//i[contains(@class,'dri-user')]]"
           position="replace">

        <!-- Bloque vacío o con lo que quieras mostrar -->
        <div class="col-auto my-1">
            <!-- Aquí puedes dejarlo vacío o poner solo los enlaces que quieras -->
            <div class="d-flex align-items-center">
                <div class="flex-grow-1 ms-3 d-none d-xl-block">
                    <!-- Ejemplo: solo mostrar Register | Login si es público -->
                    <div class="d-flex align-items-center" t-if="user_id._is_public()">
                        <a class="tp-account-info-sidebar-action me-2" href="/web/signup">Register</a>
                        <span class="mx-1">|</span>
                        <a class="tp-account-info-sidebar-action ms-2" href="/web/login">Login</a>
                    </div>
                    <!-- Si está logueado, solo mostramos el nombre -->
                    <div t-if="not user_id._is_public()" class="text-truncate mb-1" style="max-width: 150px;">
                        <t t-out="user_id.name"/>
                    </div>
                </div>
            </div>
        </div>
    </xpath>
</template>

</odoo>
