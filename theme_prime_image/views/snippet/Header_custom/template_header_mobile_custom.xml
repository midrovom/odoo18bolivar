<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="template_header_mobile_inherit" inherit_id="theme_prime.template_header_mobile" name="Template Header Mobile Inherit">
        <!-- Insertar barra de bÃºsqueda debajo del logo -->
        <xpath expr="//t[@t-call='website.placeholder_header_brand']" position="after">
            <div class="w-100 my-2">
                <t t-call="website.website_search_box_input">
                    <t t-set="_form_classes" t-valuef="o_wsale_products_searchbar_form w-100"/>
                    <t t-set="_classes" t-valuef="border tp-input-border-radius"/>
                    <t t-set="search_type" t-valuef="products"/>
                    <t t-set="action" t-value="'/shop'"/>
                </t>
            </div>
        </xpath>
    </template>
</odoo>
