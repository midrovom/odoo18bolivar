<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_banner_16_snippet" inherit_id="theme_prime.snippets" name="Banner - 16 Registry">
    <xpath expr="//t[@t-snippet='theme_prime.s_banner_15']" position="after">
      <t t-snippet="theme_prime_image.s_banner_16"
         string="Banner - 16"
         group="theme_prime_banner"
         t-thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png">
        <keywords>banner, hero</keywords>
      </t>
    </xpath>
  </template>

  <template id="s_banner_16" name="Banner - 16">
    <section class="s_banner_slider o_snippet">
      <div id="bannerCarousel16" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000" data-bs-pause="false">
        <div class="carousel-inner">

          <!-- Banner 1 -->
          <div class="carousel-item active">
            <picture>
              <!-- Imagen para móviles -->
              <source media="(max-width: 767px)" srcset="/theme_prime_image/static/src/img/s_banner_custom/mobile/banner1_small.jpg"/>
              <!-- Imagen para desktop -->
              <img src="/theme_prime_image/static/src/img/s_banner_custom/banner1.jpg" class="d-block w-100" alt="Banner 1"/>
            </picture>
          </div>

          <!-- Banner 2 -->
          <div class="carousel-item">
            <picture>
              <source media="(max-width: 767px)" srcset="/theme_prime_image/static/src/img/s_banner_custom/mobile/banner2_small.jpg"/>
              <img src="/theme_prime_image/static/src/img/s_banner_custom/banner2.jpg" class="d-block w-100" alt="Banner 2"/>
            </picture>
          </div>

          <!-- Repite lo mismo para los demás banners -->
          <div class="carousel-item">
            <picture>
              <source media="(max-width: 767px)" srcset="/theme_prime_image/static/src/img/s_banner_custom/mobile/banner3_small.jpg"/>
              <img src="/theme_prime_image/static/src/img/s_banner_custom/banner3.jpg" class="d-block w-100" alt="Banner 3"/>
            </picture>
          </div>

          <!-- ... hasta banner7 -->
        </div>

        <!-- Indicadores -->
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#bannerCarousel16" data-bs-slide-to="0" class="active"></button>
          <button type="button" data-bs-target="#bannerCarousel16" data-bs-slide-to="1"></button>
          <button type="button" data-bs-target="#bannerCarousel16" data-bs-slide-to="2"></button>
          <button type="button" data-bs-target="#bannerCarousel16" data-bs-slide-to="3"></button>
          <button type="button" data-bs-target="#bannerCarousel16" data-bs-slide-to="4"></button>
          <button type="button" data-bs-target="#bannerCarousel16" data-bs-slide-to="5"></button>
          <button type="button" data-bs-target="#bannerCarousel16" data-bs-slide-to="6"></button>
        </div>
      </div>

      <style>
        .s_banner_slider {
          width: 100%;
          margin: 0;
          padding: 0;
        }
        .s_banner_slider img {
          width: 100%;
          height: auto;       /* altura automática */
          max-height: 400px;  /* límite en desktop */
          object-fit: cover;
        }
        @media (max-width: 767px) {
          .s_banner_slider img {
            max-height: 220px; /* altura más baja en móvil */
          }
        }
        .s_banner_slider .carousel-indicators {
          bottom: 15px;
          display: flex;
          justify-content: center;
          gap: 8px;
        }
        .s_banner_slider .carousel-indicators button {
          width: 12px;
          height: 12px;
          border-radius: 50%;
          background-color: #fff;
          opacity: 0.6;
          border: none;
          transition: opacity 0.3s, transform 0.3s;
        }
        .s_banner_slider .carousel-indicators .active {
          opacity: 1;
          background-color: #007bff;
          transform: scale(1.2);
        }
      </style>
    </section>
  </template>
</odoo>
