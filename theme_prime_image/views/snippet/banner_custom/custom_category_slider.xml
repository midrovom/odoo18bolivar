<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_cover_banner_snippet" inherit_id="theme_prime.snippets" name="Cover Banner - Promo">
    <xpath expr="//t[@t-snippet='theme_prime.s_banner_15']" position="after">
      <t t-snippet="theme_prime_image.s_banner_9_custom_8cards"
         string="Cover Banner - Promo"
         group="theme_prime_banner"
         t-thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png">
        <keywords>cover, banner, promo</keywords>
      </t>
    </xpath>
  </template>

  <template id="s_banner_9_custom_8cards" name="Banner 9 - 8 Cards Custom">
    <section class="s_banner_9 o_container mt-5 mb-5 bg-white" style="max-width:1000px; margin:40px auto; padding:40px 0;">
      <div class="row justify-content-center s_col_no_bgcolor s_nb_column_fixed">
        <t t-foreach="[
          ('Celulares', 'banner1.jpg'),
          ('Laptops', 'banner2.jpg'),
          ('Tablets', 'banner3.jpg'),
          ('Gamer', 'banner4.jpg'),
          ('Audio', 'banner5.jpg'),
          ('Accesorios', 'banner6.jpg'),
          ('Smart TV', 'banner7.jpg'),
          ('Promociones', 'banner8.jpg')
        ]" t-as="item">
          <div class="col-6 col-md-3 col-lg-2 py-2 d-flex justify-content-center">
            <div class="card border rounded tp-animation-scale h-100">
              <img t-att-src="'/theme_prime_image/static/src/img/s_banner_custom/' + item[1]"
                   class="o_image img img-fluid card-img-top rounded-top" t-att-alt="item[0]"/>
              <div class="p-2 text-center">
                <a href="#" class="o_button btn btn-primary btn-sm rounded-pill" t-esc="item[0]"/>
              </div>
            </div>
          </div>
        </t>
      </div>
    </section>
  </template>
</odoo>



