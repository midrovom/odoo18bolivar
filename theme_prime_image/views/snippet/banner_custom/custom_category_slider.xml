<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_cover_banner_snippet" inherit_id="theme_prime.snippets" name="Cover Banner - Promo">
    <xpath expr="//t[@t-snippet='theme_prime.s_banner_15']" position="after">
      <t t-snippet="theme_prime_image.s_banner_9_custom_8cards"
         string="Cover Banner - Promo"
         group="theme_prime_banner"
         t-thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png">
        <keywords>cover, banner, promo</keywords>
      </t>
    </xpath>
  </template>

  <!-- Template del banner con 8 tarjetas alineadas -->
  <template id="s_banner_9_custom_8cards" name="Banner 9 - 8 Cards Custom">
    <section class="s_banner_9 o_container mt-5 mb-5 bg-white" style="max-width:1200px; margin:40px auto; padding:30px 0;">
      <div class="d-flex flex-row justify-content-between flex-wrap gap-1">
        <t t-foreach="[
          ('Celulares', 'banner1.jpg'),
          ('Laptops', 'banner2.jpg'),
          ('Tablets', 'banner3.jpg'),
          ('Gamer', 'banner4.jpg'),
          ('Audio', 'banner5.jpg'),
          ('Accesorios', 'banner6.jpg'),
          ('Smart TV', 'banner7.jpg'),
          ('Promociones', 'banner8.jpg')
        ]" t-as="item">
          <div class="card border rounded tp-animation-scale text-center" style="width: 135px;">
            <div class="p-2">
              <img t-att-src="'/theme_prime_image/static/src/img/s_banner_custom/' + item[1]"
                   class="o_image img-fluid rounded mx-auto d-block" t-att-alt="item[0]"
                   style="height: 90px; object-fit: contain;"/>
              <a href="#" class="o_button btn btn-primary btn-sm rounded-pill mt-2" t-esc="item[0]"/>
            </div>
          </div>
        </t>
      </div>
    </section>
  </template>
</odoo>



