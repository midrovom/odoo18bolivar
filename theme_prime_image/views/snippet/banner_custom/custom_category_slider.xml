<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_cover_banner_snippet" inherit_id="theme_prime.snippets" name="Cover Banner - Promo">
    <xpath expr="//t[@t-snippet='theme_prime.s_banner_15']" position="after">
      <t t-snippet="theme_prime_image.s_banner_custom_8cards"
         string="Cover Banner - Promo"
         group="theme_prime_banner"
         t-thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png">
        <keywords>cover, banner, promo</keywords>
      </t>
    </xpath>
  </template>

  <template id="s_banner_custom_8cards" name="Banner 9 - 8 Cards Custom">
    <section class="s_banner_9 o_container mt-5 mb-5 bg-white">
      <div class="row justify-content-center">
        <div class="col-12 col-md-11 col-lg-10">

          <!-- Desktop: todas las tarjetas visibles -->
          <div class="card-row d-none d-md-flex flex-row justify-content-between flex-wrap">
            <t t-foreach="[
              ('Celulares', 'banner5.jpg'),
              ('Laptops', 'banner5.jpg'),
              ('Tablets', 'banner5.jpg'),
              ('Gamer', 'banner5.jpg'),
              ('Audio', 'banner5.jpg'),
              ('Accesorios', 'banner5.jpg'),
              ('Smart TV', 'banner5.jpg'),
              ('Promociones', 'banner5.jpg')
            ]" t-as="item">
              <div class="card o_snippet_editable py-3 text-center" style="width: 120px; margin: 0.5rem; position: relative; border: 1px solid #ddd; border-radius: 8px; overflow: hidden;">
                <div style="position: relative;">
                  <img t-att-src="'/theme_prime_image/static/src/img/s_banner_custom/' + item[1]"
                       class="o_image img-fluid"
                       t-att-alt="item[0]"
                       style="width: 100%; height: 120px; object-fit: cover;"/>
                  <a href="#" class="o_button btn btn-primary btn-sm rounded-pill"
                     style="position: absolute; bottom: 8px; left: 50%; transform: translateX(-50%); z-index: 2;"
                     t-esc="item[0]"/>
                </div>
              </div>
            </t>
          </div>

          <!-- Móvil: slider automático de 3 en 3 -->
          <div class="mobile-slider d-md-none">
            <div class="slider-track">
              <div class="slider-group d-flex justify-content-center">
                <t t-foreach="[
                  ('Celulares', 'banner5.jpg'),
                  ('Laptops', 'banner5.jpg'),
                  ('Tablets', 'banner5.jpg')
                ]" t-as="item">
                  <div class="card o_snippet_editable py-3 text-center" style="width: 120px; margin: 0.5rem; position: relative; border: 1px solid #ddd; border-radius: 8px; overflow: hidden;">
                    <div style="position: relative;">
                      <img t-att-src="'/theme_prime_image/static/src/img/s_banner_custom/' + item[1]"
                           class="o_image img-fluid"
                           t-att-alt="item[0]"
                           style="width: 100%; height: 120px; object-fit: cover;"/>
                      <a href="#" class="o_button btn btn-primary btn-sm rounded-pill"
                         style="position: absolute; bottom: 8px; left: 50%; transform: translateX(-50%); z-index: 2;"
                         t-esc="item[0]"/>
                    </div>
                  </div>
                </t>
              </div>

              <div class="slider-group d-flex justify-content-center">
                <t t-foreach="[
                  ('Gamer', 'banner5.jpg'),
                  ('Audio', 'banner5.jpg'),
                  ('Accesorios', 'banner5.jpg')
                ]" t-as="item">
                  <div class="card o_snippet_editable py-3 text-center" style="width: 120px; margin: 0.5rem; position: relative; border: 1px solid #ddd; border-radius: 8px; overflow: hidden;">
                    <div style="position: relative;">
                      <img t-att-src="'/theme_prime_image/static/src/img/s_banner_custom/' + item[1]"
                           class="o_image img-fluid"
                           t-att-alt="item[0]"
                           style="width: 100%; height: 120px; object-fit: cover;"/>
                      <a href="#" class="o_button btn btn-primary btn-sm rounded-pill"
                         style="position: absolute; bottom: 8px; left: 50%; transform: translateX(-50%); z-index: 2;"
                         t-esc="item[0]"/>
                    </div>
                  </div>
                </t>
              </div>

              <div class="slider-group d-flex justify-content-center">
                <t t-foreach="[
                  ('Smart TV', 'banner5.jpg'),
                  ('Promociones', 'banner5.jpg'),
                  ('Celulares', 'banner5.jpg')
                ]" t-as="item">
                  <div class="card o_snippet_editable py-3 text-center" style="width: 120px; margin: 0.5rem; position: relative; border: 1px solid #ddd; border-radius: 8px; overflow: hidden;">
                    <div style="position: relative;">
                      <img t-att-src="'/theme_prime_image/static/src/img/s_banner_custom/' + item[1]"
                           class="o_image img-fluid"
                           t-att-alt="item[0]"
                           style="width: 100%; height: 120px; object-fit: cover;"/>
                      <a href="#" class="o_button btn btn-primary btn-sm rounded-pill"
                         style="position: absolute; bottom: 8px; left: 50%; transform: translateX(-50%); z-index: 2;"
                         t-esc="item[0]"/>
                    </div>
                  </div>
                </t>
              </div>
            </div>
          </div>

        </div>
      </div>

      <!-- Estilos embebidos -->
      <style>
        @media (max-width: 768px) {
          .mobile-slider {
            overflow: hidden;
            position: relative;
          }

          .slider-track {
            display: flex;
            width: 300%;
            animation: slideGroups 12s linear infinite;
          }

          .slider-group {
            width: 100%;
            display: flex;
            justify-content: center;
          }

          @keyframes slideGroups {
            0% { transform: translateX(0%); }
            33% { transform: translateX(-100%); }
            66% { transform: translateX(-200%); }
            100% { transform: translateX(0%); }
          }
        }
      </style>
    </section>
  </template>
</odoo>