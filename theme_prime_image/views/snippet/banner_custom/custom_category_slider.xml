<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_cover_banner_snippet" inherit_id="theme_prime.snippets" name="Cover Banner - Promo">
    <xpath expr="//t[@t-snippet='theme_prime.s_banner_15']" position="after">
      <t t-snippet="theme_prime_image.s_banner_custom_8cards"
         string="Cover Banner - Promo"
         group="theme_prime_banner"
         t-thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png">
        <keywords>cover, banner, promo</keywords>
      </t>
    </xpath>
  </template>

  <template id="s_banner_custom_8cards" name="Banner 9 - 8 Cards Custom">
    <section class="s_banner_9 o_container mt-5 mb-5 bg-white">
      <!-- Desktop: todas las tarjetas visibles -->
      <div class="col-12 col-md-11 col-lg-10 d-none d-md-flex flex-wrap justify-content-between gap-2 mx-auto">
        <t t-foreach="[
          ('Celulares', 'banner5.jpg'),
          ('Laptops', 'banner5.jpg'),
          ('Tablets', 'banner5.jpg'),
          ('Gamer', 'banner5.jpg'),
          ('Audio', 'banner5.jpg'),
          ('Accesorios', 'banner5.jpg'),
          ('Smart TV', 'banner5.jpg'),
          ('Promociones', 'banner5.jpg')
        ]" t-as="item">
          <div style="width: 120px; height: 150px; position: relative; border: 1px solid #ddd; border-radius: 8px; overflow: hidden;">
            <img t-att-src="'/theme_prime_image/static/src/img/s_banner_custom/' + item[1]"
                 t-att-alt="item[0]"
                 style="width: 100%; height: 100%; object-fit: cover;"/>
            <a href="#"
               t-esc="item[0]"
               style="position: absolute; bottom: 8px; left: 50%; transform: translateX(-50%);
                      background-color: #007bff; color: white; text-decoration: none;
                      padding: 4px 8px; font-size: 0.75rem; border-radius: 2px; z-index: 2;
                      display: inline-block;"/>
          </div>
        </t>
      </div>

      <!-- Móvil: carrusel automático de 4 tarjetas por slide -->
      <div class="d-md-none w-100">
        <div id="bannerCarouselMobile" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
          <div class="carousel-inner">

            <!-- Slide 1 -->
            <div class="carousel-item active">
              <div class="d-flex justify-content-center gap-2">
                <t t-foreach="[
                  ('Celulares', 'banner5.jpg'),
                  ('Laptops', 'banner5.jpg'),
                  ('Tablets', 'banner5.jpg'),
                  ('Gamer', 'banner5.jpg')
                ]" t-as="item">
                  <div style="width: 120px; height: 150px; position: relative; border: 1px solid #ddd; border-radius: 8px; overflow: hidden;">
                    <img t-att-src="'/theme_prime_image/static/src/img/s_banner_custom/' + item[1]"
                         t-att-alt="item[0]"
                         style="width: 100%; height: 100%; object-fit: cover;"/>
                    <a href="#"
                       t-esc="item[0]"
                       style="position: absolute; bottom: 8px; left: 50%; transform: translateX(-50%);
                              background-color: #007bff; color: white; text-decoration: none;
                              padding: 4px 8px; font-size: 0.75rem; border-radius: 2px; z-index: 2;
                              display: inline-block;"/>
                  </div>
                </t>
              </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item">
              <div class="d-flex justify-content-center gap-2">
                <t t-foreach="[
                  ('Audio', 'banner5.jpg'),
                  ('Accesorios', 'banner5.jpg'),
                  ('Smart TV', 'banner5.jpg'),
                  ('Promociones', 'banner5.jpg')
                ]" t-as="item">
                  <div style="width: 120px; height: 150px; position: relative; border: 1px solid #ddd; border-radius: 8px; overflow: hidden;">
                    <img t-att-src="'/theme_prime_image/static/src/img/s_banner_custom/' + item[1]"
                         t-att-alt="item[0]"
                         style="width: 100%; height: 100%; object-fit: cover;"/>
                    <a href="#"
                       t-esc="item[0]"
                       style="position: absolute; bottom: 8px; left: 50%; transform: translateX(-50%);
                              background-color: #007bff; color: white; text-decoration: none;
                              padding: 4px 8px; font-size: 0.75rem; border-radius: 2px; z-index: 2;
                              display: inline-block;"/>
                  </div>
                </t>
              </div>
            </div>

          </div>
        </div>
      </div>
    </section>
  </template>
</odoo>

