<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_banner_16_snippet" inherit_id="theme_prime.snippets" name="Banner - 16 Registry">
    <xpath expr="//t[@t-snippet='theme_prime.s_cover_5']" position="after">
      <t t-snippet="theme_prime_image.s_cover_custom"
         string="Banner - 16"
         group="theme_prime_cover"
         t-thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png">
        <keywords>banner, hero</keywords>
      </t>
    </xpath>
  </template>

  <template id="s_cover_custom" name="Cover Responsive">
    <section class="s_cover o_snippet position-relative text-center">
      <picture>
        <!-- Imagen para móviles (600x320) -->
        <source media="(max-width: 767px)" srcset="/theme_prime_image/static/src/img/s_cover/mobile/cover_small.jpg"/>
        <!-- Imagen para desktop (1500x300) -->
        <img src="/theme_prime_image/static/src/img/s_cover/cover_large.jpg"
             class="img-fluid w-100"
             alt="Cover Responsive"/>
      </picture>

      <!-- Contenido encima del cover -->
      <div class="position-absolute top-50 start-50 translate-middle text-white">
        <h2 class="fw-bold">Título del Cover</h2>
        <p class="lead">Texto descriptivo para tu campaña</p>
        <a href="/shop" class="btn btn-primary rounded-pill">Comprar ahora</a>
      </div>

      <style>
        .s_cover img {
          object-fit: cover;
          height: auto;
          max-height: 350px; /* límite en desktop */
        }
        @media (max-width: 767px) {
          .s_cover img {
            max-height: 220px; /* límite en móvil */
          }
        }
      </style>
    </section>
  </template>
</odoo>
