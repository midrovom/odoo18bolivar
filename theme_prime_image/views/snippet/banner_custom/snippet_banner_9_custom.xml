<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_banner_9_inherit" inherit_id="theme_prime.s_banner_9" name="Banner 9 Custom">
    <xpath expr="//section[contains(@class,'s_banner_9')]" position="attributes">
      <attribute name="class">s_banner_9 o_container mt-5 mb-5 bg-white</attribute>
      <attribute name="style">max-width:1000px; margin:40px auto; padding:40px 0;</attribute>
    </xpath>

    <!-- Reemplazo del contenido interno -->
    <xpath expr="//div[@class='row s_col_no_bgcolor s_nb_column_fixed']" position="replace">

      <!-- Desktop: 4 cards en grilla -->
      <div class="row justify-content-center s_col_no_bgcolor s_nb_column_fixed d-none d-md-flex">
        <div class="col-6 col-md-6 col-lg-3 py-3 d-flex justify-content-center">
          <div class="card border rounded tp-animation-scale h-100">
            <img src="/theme_prime_image/static/src/img/s_banner_custom/banner1.jpg"
                 class="img img-fluid card-img-top rounded-top" alt="Banner Image 01"/>
            <div class="p-3 text-center">
              <a href="#" class="btn btn-primary rounded-pill">Comprar</a>
            </div>
          </div>
        </div>

        <div class="col-6 col-md-6 col-lg-3 py-3 d-flex justify-content-center">
          <div class="card border rounded tp-animation-scale h-100">
            <img src="/theme_prime_image/static/src/img/s_banner_custom/banner2.jpg"
                 class="img img-fluid card-img-top rounded-top" alt="Banner Image 02"/>
            <div class="p-3 text-center">
              <a href="#" class="btn btn-primary rounded-pill">Comprar</a>
            </div>
          </div>
        </div>

        <div class="col-6 col-md-6 col-lg-3 py-3 d-flex justify-content-center">
          <div class="card border rounded tp-animation-scale h-100">
            <img src="/theme_prime_image/static/src/img/s_banner_custom/banner3.jpg"
                 class="img img-fluid card-img-top rounded-top" alt="Banner Image 03"/>
            <div class="p-3 text-center">
              <a href="#" class="btn btn-primary rounded-pill">Comprar</a>
            </div>
          </div>
        </div>

        <div class="col-6 col-md-6 col-lg-3 py-3 d-flex justify-content-center">
          <div class="card border rounded tp-animation-scale h-100">
            <img src="/theme_prime_image/static/src/img/s_banner_custom/banner4.jpg"
                 class="img img-fluid card-img-top rounded-top" alt="Banner Image 04"/>
            <div class="p-3 text-center">
              <a href="#" class="btn btn-primary rounded-pill">Comprar</a>
            </div>
          </div>
        </div>
      </div>

      <!-- MÃ³vil: carrusel de 2 en 2 -->
      <div class="d-md-none w-100">
        <div id="bannerCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
          <div class="carousel-inner">

            <!-- Slide 1 -->
            <div class="carousel-item active">
              <div class="d-flex justify-content-around">
                <div class="card border rounded tp-animation-scale mx-2" style="width:45%;">
                  <img src="/theme_prime_image/static/src/img/s_banner_custom/banner1.jpg"
                       class="img img-fluid card-img-top rounded-top" alt="Banner Image 01"/>
                  <div class="p-2 text-center">
                    <a href="#" class="btn btn-primary btn-sm rounded-pill">Comprar</a>
                  </div>
                </div>
                <div class="card border rounded tp-animation-scale mx-2" style="width:45%;">
                  <img src="/theme_prime_image/static/src/img/s_banner_custom/banner2.jpg"
                       class="img img-fluid card-img-top rounded-top" alt="Banner Image 02"/>
                  <div class="p-2 text-center">
                    <a href="#" class="btn btn-primary btn-sm rounded-pill">Comprar</a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item">
              <div class="d-flex justify-content-around">
                <div class="card border rounded tp-animation-scale mx-2" style="width:45%;">
                  <img src="/theme_prime_image/static/src/img/s_banner_custom/banner3.jpg"
                       class="img img-fluid card-img-top rounded-top" alt="Banner Image 03"/>
                  <div class="p-2 text-center">
                    <a href="#" class="btn btn-primary btn-sm rounded-pill">Comprar</a>
                  </div>
                </div>
                <div class="card border rounded tp-animation-scale mx-2" style="width:45%;">
                  <img src="/theme_prime_image/static/src/img/s_banner_custom/banner4.jpg"
                       class="img img-fluid card-img-top rounded-top" alt="Banner Image 04"/>
                  <div class="p-2 text-center">
                    <a href="#" class="btn btn-primary btn-sm rounded-pill">Comprar</a>
                  </div>
                </div>
              </div>
            </div>

          </div>

          <!-- Controles -->
          <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
          </button>
        </div>
      </div>

    </xpath>
  </template>
</odoo>
