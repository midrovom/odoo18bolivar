<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Registro del snippet en el editor visual -->
  <template id="s_trending_box_snippet_snippet" inherit_id="theme_prime.snippets" name="Trending Text Box - Registry">
    <xpath expr="//t[@t-snippet='theme_prime.s_call_to_action_5']" position="after">
      <t t-snippet="theme_prime_image.s_trending_box_snippet"
         string="Trending Text Box - 6"
         group="theme_prime_cta"
         t-thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png">
        <keywords>call to action, trending, cta</keywords>
      </t>
    </xpath>
  </template>

  <!-- Snippet visual -->
  <template id="s_trending_text_snippet" name="Trending Text Block">
    <section class="s_trending_text_snippet py-4">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-md-10 col-lg-8 text-center">
            <h2 class="trending-title fw-bold mb-2">#Trending</h2>
            <p class="trending-subtitle lead text-muted mb-0">Esto podr√≠a interesarte</p>
          </div>
        </div>
      </div>
    </section>
  </template>
</odoo>
