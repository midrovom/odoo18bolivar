<odoo>
    <template id="snippets_categories" inherit_id="website.snippets" name="Custom Categories Snippets">
        <xpath expr="//t[@id='installed_snippets_hook']" position="after">
            <t snippet-group="categories"
               t-snippet="website.s_snippet_group"
               string="Categories"
               t-thumbnail="/website/static/src/img/snippets_thumbs/s_dynamic_categories.svg"/>
        </xpath>

        <!-- Añadir el snippet dinámico de categorías dentro del grupo -->
        <xpath expr="//t[@id='installed_snippets_hook']" position="after">
            <t t-snippet="website_sale.s_dynamic_snippet_categories"
               string="Categories"
               group="categories"/>
        </xpath>

    </template>
</odoo>

