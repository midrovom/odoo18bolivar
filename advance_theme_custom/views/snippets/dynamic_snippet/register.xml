      <t t-snippet="advance_theme_prime.alternative_products_custom"
         string="Snippet de Categorías"
         group="catalog"
         t-image-preview="/mi_modulo/static/src/img/snippets_previews/mi_snippet_catalog_banner_preview.webp">
