<odoo>
    <template id="custom_snippet_categories_registration" inherit_id="external_snippets" name="Categories Carousel Snippet">
        <xpath expr="//snippets[@id='snippet_structure']" position="inside">
            <t t-install="advance_theme_custom" string="Categories Carousel" group="catalog"
               t-snippet="advance_theme_custom.alternative_products_custom"
               t-image-preview="/your_module/static/src/img/snippets_previews/s_dynamic_snippet_categories_preview.webp"/>
        </xpath>
    </template>
</odoo>
