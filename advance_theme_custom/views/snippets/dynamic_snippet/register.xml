<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="custom_snippet_categories_registration" inherit_id="website.snippets">
    <xpath expr="//t[@t-snippet='website.s_banner_product']" position="after">
      <t t-snippet="advance_theme_custom.s_trending_box_with_image_snippet"
         string="Categories"
         group="catalog"
         t-thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png">
        <keywords>trending, image, link</keywords>
      </t>
    </xpath>
  </template>