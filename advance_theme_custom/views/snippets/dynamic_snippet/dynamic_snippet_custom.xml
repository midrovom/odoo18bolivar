<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Snippet -->
    <template id="s_dynamic_snippet_products_custom" name="Categories Carousel">
    <t t-call="website.s_dynamic_snippet_template">
        <t t-set="snippet_name" t-value="'s_dynamic_snippet_products_custom'"/>
        <t t-set="default_design_classes"
        t-value="getattr(request.env['website'].get_current_website(), 'shop_opt_products_design_classes', '')"/>
        <t t-if="'o_wsale_products_opt_layout_catalog' not in default_design_classes"
        t-set="default_design_classes"
        t-value="'o_wsale_products_opt_layout_catalog o_wsale_products_opt_thumb_cover'"/>
        <t t-set="snippet_classes" t-value="'oe_website_sale ' + default_design_classes"/>
        <t t-set="main_page_url" t-value="'/shop/category'"/>
        <t t-call="advance_theme_custom.s_dynamic_snippet_products_custom_preview_data"/>
    </t>
    </template>

</odoo>
