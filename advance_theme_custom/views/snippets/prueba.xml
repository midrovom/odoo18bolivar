    <xpath expr="//div[@class='container s_tp_mega_menu_category_snippet_wrapper']" position="replace">
        <div class="container s_tp_mega_menu_category_snippet_wrapper d-flex flex-row justify-content-center align-items-center gap-3">
            <div class="alert alert-primary text-center mb-0" role="alert">
                <span class="tp-config-link fw-bold tp-cursor-pointer">Click Here!</span> to configure snippet.
            </div>
            
        </div>
    </xpath>
</template>


</odoo>

