<odoo>
  <template id="s_dynamic_snippet_categories_preview_data" name="Categories Preview Data">
        <div class="carousel slide s_dialog_preview">
            <div class="carousel-inner row w-100 mx-auto">
                <div class="carousel-item active">
                    <div class="row">
                        <div class="col-3">
                            <div class="card border-0">
                                <img class="card-img-top rounded" src="/your_module/static/src/img/category_preview_1.jpg"/>
                                <div class="card-body">
                                    <div class="h6 card-title">Living Room</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="card border-0">
                                <img class="card-img-top rounded" src="/your_module/static/src/img/category_preview_2.jpg"/>
                                <div class="card-body">
                                    <div class="h6 card-title">Office</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="card border-0">
                                <img class="card-img-top rounded" src="/your_module/static/src/img/category_preview_3.jpg"/>
                                <div class="card-body">
                                    <div class="h6 card-title">Bedroom</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="card border-0">
                                <img class="card-img-top rounded" src="/your_module/static/src/img/category_preview_4.jpg"/>
                                <div class="card-body">
                                    <div class="h6 card-title">Kitchen</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" data-bs-slide="prev" role="button" aria-label="Previous" href="#s_dynamic_snippet_categories">
                <span class="fa fa-chevron-circle-left fa-2x"></span>
            </a>
            <a class="carousel-control-next" data-bs-slide="next" role="button" aria-label="Next" href="#s_dynamic_snippet_categories">
                <span class="fa fa-chevron-circle-right fa-2x"></span>
            </a>
        </div>
    </template>
</odoo>

