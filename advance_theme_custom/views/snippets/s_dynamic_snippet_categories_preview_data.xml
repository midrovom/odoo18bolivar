<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_dynamic_snippet_categories_preview_data" name="Categories Preview Data">
        <div class="carousel slide s_dialog_preview">
            <div class="carousel-inner row w-100 mx-auto">
                <div role="option" class="carousel-item active" style="min-height: 357.875px;">
                    <div class="row">
                        <!-- Category 1 -->
                        <div class="d-flex flex-grow-0 flex-shrink-0 col-3">
                            <div class="o_carousel_product_card bg-transparent w-100 card border-0">
                                <a class="o_carousel_product_img_link stretched-link" href="#">
                                    <div class="overflow-hidden rounded">
                                        <!-- Imagen simulada de categoría -->
                                        <img class="card-img-top o_img_product_square o_img_product_cover h-auto"
                                             loading="lazy"
                                             src="/website_sale/static/src/img/product_previews/product_1.jpg"
                                             alt="Category Living Room"/>
                                    </div>
                                </a>
                                <div class="o_carousel_product_card_body d-flex flex-wrap flex-column justify-content-between h-100 p-3">
                                    <!-- Nombre de categoría -->
                                    <div class="h6 card-title">Living Room</div>
                                </div>
                            </div>
                        </div>

                        <!-- Category 2 -->
                        <div class="d-flex flex-grow-0 flex-shrink-0 col-3">
                            <div class="o_carousel_product_card bg-transparent w-100 card border-0">
                                <a class="o_carousel_product_img_link stretched-link" href="#">
                                    <div class="overflow-hidden rounded">
                                        <img class="card-img-top o_img_product_square o_img_product_cover h-auto"
                                             loading="lazy"
                                             src="/website_sale/static/src/img/product_previews/product_2.jpg"
                                             alt="Category Office"/>
                                    </div>
                                </a>
                                <div class="o_carousel_product_card_body d-flex flex-wrap flex-column justify-content-between h-100 p-3">
                                    <div class="h6 card-title">Office</div>
                                </div>
                            </div>
                        </div>

                        <!-- Category 3 -->
                        <div class="d-flex flex-grow-0 flex-shrink-0 col-3">
                            <div class="o_carousel_product_card bg-transparent w-100 card border-0">
                                <a class="o_carousel_product_img_link stretched-link" href="#">
                                    <div class="overflow-hidden rounded">
                                        <img class="card-img-top o_img_product_square o_img_product_cover h-auto"
                                             loading="lazy"
                                             src="/website_sale/static/src/img/product_previews/product_3.jpg"
                                             alt="Category Outdoor"/>
                                    </div>
                                </a>
                                <div class="o_carousel_product_card_body d-flex flex-wrap flex-column justify-content-between h-100 p-3">
                                    <div class="h6 card-title">Outdoor</div>
                                </div>
                            </div>
                        </div>

                        <!-- Category 4 -->
                        <div class="d-flex flex-grow-0 flex-shrink-0 col-3">
                            <div class="o_carousel_product_card bg-transparent w-100 card border-0">
                                <a class="o_carousel_product_img_link stretched-link" href="#">
                                    <div class="overflow-hidden rounded">
                                        <img class="card-img-top o_img_product_square o_img_product_cover h-auto"
                                             loading="lazy"
                                             src="/website_sale/static/src/img/product_previews/product_4.jpg"
                                             alt="Category Kitchen"/>
                                    </div>
                                </a>
                                <div class="o_carousel_product_card_body d-flex flex-wrap flex-column justify-content-between h-100 p-3">
                                    <div class="h6 card-title">Kitchen</div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" data-bs-slide="prev" role="button" aria-label="Previous" title="Previous" href="#s_dynamic_snippet_1">
                <span class="fa fa-chevron-circle-left fa-2x"></span>
            </a>
            <a class="carousel-control-next" data-bs-slide="next" role="button" aria-label="Next" title="Next" href="#s_dynamic_snippet_1">
                <span class="fa fa-chevron-circle-right fa-2x"></span>
            </a>
        </div>
    </template>
</odoo>




