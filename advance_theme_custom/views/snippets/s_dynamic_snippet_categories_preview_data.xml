<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_dynamic_snippet_categories_template" inherit_id="website.s_dynamic_snippet">
        <xpath expr="//div[contains(@class,'carousel-inner')]" position="replace">
            <div class="carousel-inner row w-100 mx-auto">
                
                <t t-set="categories" t-value="request.env['product.public.category'].sudo().search([], limit=8)"/>

                <t t-foreach="categories" t-as="cat" t-key="cat.id">
                    <div role="option" t-attf-class="carousel-item #{'active' if loop.first else ''}">
                        <div class="row">
                            <div class="col-3 d-flex">
                                <div class="o_carousel_category_card w-100 card border-0">
                                    <a t-att-href="'/shop/category/%s' % cat.id" class="stretched-link">
                                        <div class="overflow-hidden rounded">
                                            <img class="card-img-top o_img_category_cover"
                                                 t-att-src="'/web/image/product.public.category/%s/image_1920' % cat.id"/>
                                        </div>
                                    </a>
                                    <div class="p-3">
                                        <div class="h6"><t t-esc="cat.name"/></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>

            </div>
        </xpath>
    </template>
</odoo>
