<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_dynamic_snippet_categories" name="Dynamic Categories">
        <div class="carousel slide">
            <div class="carousel-inner row w-100 mx-auto">

                <t t-set="categories" t-value="request.env['product.public.category'].search([], limit=6)"/>

                <t t-foreach="categories" t-as="cat" t-key="cat.id">
                    <div role="option" t-attf-class="carousel-item #{'active' if loop.first else ''}" style="min-height: 357.875px;">
                        <div class="row">
                            <div class="d-flex flex-grow-0 flex-shrink-0 col-3">
                                <a t-att-href="'/shop/category/%s' % cat.id">
                                    <img t-att-src="'/web/image/product.public.category/%s/image_1920' % cat.id"/>
                                </a>
                                <div><t t-esc="cat.name"/></div>
                            </div>
                        </div>
                    </div>
                </t>


            </div>

            <a class="carousel-control-prev" data-bs-slide="prev" role="button">
                <span class="fa fa-chevron-circle-left fa-2x"></span>
            </a>
            <a class="carousel-control-next" data-bs-slide="next" role="button">
                <span class="fa fa-chevron-circle-right fa-2x"></span>
            </a>
        </div>
    </template>
</odoo>
