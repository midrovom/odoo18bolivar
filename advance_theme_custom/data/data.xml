<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Acción servidor para obtener categorías -->
        <record id="dynamic_snippet_categories_action" model="ir.actions.server">
        <field name="name">Public Categories</field>
        <field name="model_id" ref="website_sale.model_product_public_category"/>
        <field name="state">code</field>
        <field name="code">
DynamicFilter = model.env['website.snippet.filter']
response = DynamicFilter._get_categories('all')
        </field>
        </record>

        <!-- Filtro dinámico que conecta el snippet con la acción -->
        <record id="dynamic_filter_categories" model="website.snippet.filter">
        <field name="action_server_id" ref="advance_theme_custom.dynamic_snippet_categories_action"/>
        <field name="field_names">name,image_512</field>
        <field name="limit" eval="12"/>
        <field name="name">Public Categories</field>
        </record>

    </data>
</odoo>


