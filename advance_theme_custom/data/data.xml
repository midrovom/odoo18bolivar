<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="dynamic_snippet_product_public_category" model="ir.actions.server">
            <field name="name">Dynamic Snippet Categories</field>
            <field name="model_id" ref="website_sale.model_product_public_category"/>
            <field name="state">code</field>
            <field name="code">
        categories = env['product.public.category'].search([
            ('website_published', '=', True)
        ], limit=limit)

        action = categories
            </field>
        </record>

        <record id="dynamic_filter_product_public_category" model="website.snippet.filter">
            <field name="name">Public Product Categories</field>
            <field name="action_server_id" ref="advance_theme_custom.dynamic_snippet_product_public_category"/>
            <field name="field_names">display_name,image_512</field>
            <field name="limit" eval="12"/>
        </record>
    
    </data>
    

</odoo>
