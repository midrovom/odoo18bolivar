<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="dynamic_filter_template_product_public_category_style_1" name="Image + Name Category">
            <t t-foreach="records" t-as="data" data-thumb="/website_sale/static/src/img/snippets_options/product_image_with_name.svg">
                <t t-set="record" t-value="data['_record']"/>
                <div class="card h-100 w-100 bg-dark text-white rounded o_dynamic_category_hovered text-center border-0">
                    <div t-if="is_sample" class="h5 o_ribbon_right bg-primary text-uppercase">Sample</div>

                    <a class="o_carousel_category_img_link overflow-hidden" t-att-href="data['url']">
                        <img class="card-img-top o_img_category_square o_img_category_cover rounded-top"
                             loading="lazy"
                             t-att-src="data['image_512']"
                             t-att-alt="record.name"/>
                    </a>

                    <div class="card-body p-2">
                        <h6 class="card-title mb-1 text-white" t-esc="record.name"/>
                        <p class="card-text text-muted small mb-0">
                            <t t-if="data.get('product_count')">
                                <t t-esc="data['product_count']"/> productos
                            </t>
                        </p>
                    </div>
                </div>
            </t>
        </template>   
    </data>  
</odoo>
